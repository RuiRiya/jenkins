pipeline {
    agent any

stages {
        stage('print versions') {
            steps {
                git branch: 'main', credentialsId: 'git-cred', url: 'https://github.com/himanshu44sharma/perfume-store.git'
                sh 'npm cache verify'
                sh 'npm --version'
                sh 'node --version'
            }
        }

        stage('Install') {
            steps {
                sh 'npm init'
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
    }
}
